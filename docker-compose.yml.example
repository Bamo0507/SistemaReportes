version: "3.8"

services:
  # ──────────────── PostgreSQL ────────────────
  db:
    image: postgres:14-alpine
    env_file: .env            # credenciales y nombre de la BD
    ports:
      - "${POSTGRES_PORT}:5432"
    volumes:
      - ./Scripts:/docker-entrypoint-initdb.d:ro

  # ──────────────── API backend ───────────────
  backend:
    build:
      context: ./backend       # Dockerfile y código del backend
    env_file: .env            
    depends_on:
      - db
    ports:
      - "3000:3000"            # HOST:CONTENEDOR 